@page
@model IntroduccionRazor_ASPNet.Pages.Ciclos


<h3>Ejemplo Ciclo While</h3>

@{
    var cont = 1;
    while (cont<10)
    {
        <p>@cont</p>
        cont++;
    }
}
<br/>

<h3>Ejemplo Ciclo Do-While</h3>
@{
    cont = 1;
    do
    {
        <p>@cont</p>
        cont++;
    } while (cont<1);
}
<br/>

<h3>Ejemplo Ciclo For</h3>
@for(var i=10; i<21; i++)
{
    <p>@i</p>    
}
<br/>

<h3>Ejemplo Ciclo For Each</h3>
<ul>
    @foreach (var element in HttpContext.Request.Headers)
    {
        <li>@element</li>
    }
</ul>
<br/>
