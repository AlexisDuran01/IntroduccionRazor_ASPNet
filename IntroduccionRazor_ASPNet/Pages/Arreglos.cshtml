@page
@model IntroduccionRazor_ASPNet.Pages.Arreglos

@{
}

@{
    // Definido un arreglo de datos tipos string
    string[] nombres = { "Ana", "Juan", "Pedro", "Maria" };
    //Obtemos la posicion en la que se encuentra el nombre de pedro
    int i = Array.IndexOf(nombres, "Pedro") + 1;
    
    //Obtenemos el numero de posiciones del arreglo
    int len = nombres.Length;
    
    //Obtenemos el nombre que se encuentra en la segunda posicion
    string x = nombres[2 - 1];
}

<h3>Listas de Nombres del Arreglo:</h3>
<ol>
    @foreach (var nombre in nombres)
    {
        <li>@nombre</li>
    }
</ol>
<p>El numero de personas en el arreglo es: @len</p>
<p>La persona en la posicion 2 es @x </p>
<p>Pedro esta ahora en la posicion @i</p>

