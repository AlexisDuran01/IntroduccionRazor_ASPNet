@page
@model IntroduccionRazor_ASPNet.Pages.Ejercicio1PesoCorporal

<h3 class="text-center mb-4">Calculadora Peso Corporal</h3>

<form method="post" class="d-flex flex-column gap-2 w-25 m-auto">
    <label for="peso">Peso (kg):</label>
    <input type="number"  asp-for="Peso" required />

    <label for="altura">Altura (m):</label>
    <input type="number"  step="any" asp-for="Altura" required />

    <input type="submit" value="Calcular" class="mt-3 btn w-50 m-auto bg-success text-white" />
</form>

@if (Model.MostrarResultado)
{
    <div class="text-center mt-4">
        <h4><strong>IMC:</strong> @Model.IMC.ToString("0.00")</h4>
        <h4><strong>Categoría:</strong> @Model.Categoria</h4>
        <img src="~/images/@Model.ImagenRuta" class="d-block mx-auto mt-3" style="width: 150px;" alt="@Model.Categoria" />
    </div>
}
